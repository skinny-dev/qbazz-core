# Database Configuration
# For development: SQLite (local only)
# DATABASE_URL="file:./dev.db"
# For production: PostgreSQL (required for deployment)
DATABASE_URL="postgresql://user:password@host:5432/database"

# Server Configuration
PORT=3000
NODE_ENV=production

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_URL=https://your-bot-domain.com

# API Security
JWT_SECRET=your_secure_random_32char_string_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# QR Code Configuration
QR_CODE_BASE_URL=https://qbazz.com
QR_CODE_SIZE=300
QR_CODE_MARGIN=1

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=debug
